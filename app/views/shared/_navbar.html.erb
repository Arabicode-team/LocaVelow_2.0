<% content_for :title, "La navbar de Locavelow" %>
<% content_for :meta_description, "La navbar de Locavelow permet de se connecter, s'enregistrer, de créer et poster une annonce." %>


<nav class="navbar navbar-expand-lg blur blur-rounded top-0 border-bottom z-index-3 shadow w-100 mt-4 my-3 py-2 fixed-top">
  <div class="container-fluid position-relative">
    <div class="my-logo-container text-center position-absolute start-50 translate-middle-x" style="">
      <%= link_to root_path, aria_label: "Home" do %>
        <%= image_tag asset_path('logo.png'), class: "logo-img", width: "10%", alt: "Logo" %>
      <% end %>
    </div>
    <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="background-color: #FFDE8C;">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <div class="collapse navbar-collapse mt-3" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item mx-4">
          <%= link_to "Comment ça marche ?", static_about_path, class: "btn btn-outline-dark btn-sm", aria_label: "Comment ça marche ?" %>
        </li>
        <li class="nav-item mx-4">
          <% if user_signed_in? %>
            <%= link_to "Je suis propriétaire", new_bicycle_path, class: "btn btn-outline-light btn-sm", data: { turbo: false }, aria_label: "Je suis propriétaire" %>
          <% else %>
            <%= link_to "Je suis propriétaire", new_user_registration_path, class: "btn btn-outline-light btn-sm", data: { turbo: false }, aria_label: "Je suis propriétaire" %>
          <% end %>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item mx-4">
          <% if user_signed_in? %>
            <%= link_to user_path(current_user), class: "nav-link", aria_label: "Profil" do %>
              <i class="fas fa-user me-2"></i> Profil
            <% end %>
          <% else %>
            <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link", aria_label: "S'inscrire" %>
          <% end %>
        </li>
        <li class="nav-item mx-4">
          <% if user_signed_in? %>
            <%= form_tag(destroy_user_session_path, method: :delete) do %>
              <%= submit_tag "Se déconnecter", class: "btn btn-outline-light btn-sm", aria_label: "Se déconnecter" %>
            <% end %>
          <% else %>
            <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-dark btn-sm", aria_label: "Se connecter" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
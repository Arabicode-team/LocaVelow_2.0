<div class="modal fade" id="deleteBicycleModal" tabindex="-1" role="dialog" aria-labelledby="deleteBicycleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-danger modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteBicycleModalLabel">Confirmation de suppression</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= confirm_text %>
      </div>
      <div class="modal-footer">
        <%= button_to 'Supprimer', delete_path, method: :delete, class: "btn btn-danger", data: { bs_dismiss: "modal" } %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
      </div>
    </div>
  </div>
</div>

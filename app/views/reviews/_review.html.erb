
<% content_for :title, "Avis sur la location | Locavelow" %>
<% content_for :meta_description, "Avis sur la location. Détails de l'avis, note, commentaire, et date de l'avis." %>
                       
<div id="<%= dom_id review %>" class="card mb-3 mx-auto" style="max-width: 40rem;" itemscope itemtype="http://schema.org/Review">

  <div class="card-body">
    <h5 class="card-title">Location : <%= review.rental.bicycle.model %></h5>

    <p class="card-text">
      <strong>Utilisateur noté :</strong>
      <span itemprop="author"><%= review.rental.bicycle.owner.first_name %> <%= review.rental.bicycle.owner.last_name %></span>
    </p>

    <p class="card-text">
      <strong>Note :</strong>
      <span itemprop="rating"><%= review.rating %></span>
    </p>

    <p class="card-text">
      <strong>Avis :</strong>
      <span itemprop="reviewBody"><%= review.review_text %></span>
    </p>

    <p class="card-text">
      <strong>Date de l'avis :</strong>
      <span itemprop="datePublished"><%= review.review_date %></span>
    </p>
  </div>
</div>
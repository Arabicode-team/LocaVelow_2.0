<div class="container p-2" style="max-width: 500px;">
  <div class="card border border-primary rounded p-4">
    <%= form_tag(rentals_path, method: :post, id: "rental_form", "data-price-per-hour" => @bicycle.price_per_hour) do %>
      <%= hidden_field_tag 'rental[bicycle_id]', @bicycle.id %>
      <%= hidden_field_tag 'rental[renter_id]', current_user.id %>
      <%= hidden_field_tag 'rental[rental_status]', 'in_progress' %>
      
      <div class="mb-3">
        <%= label_tag 'rental[start_date]', 'Date et heure de début' %>
        <%= datetime_field_tag 'rental[start_date]', nil, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= label_tag 'rental[end_date]', 'Date et heure de fin' %>
        <%= datetime_field_tag 'rental[end_date]', nil, class: 'form-control' %>
      </div>
      <div id="calculated_cost" class="border border-primary rounded p-2 m-3 text-center">Prix total estimé : 0€</div>
      <div class="d-flex justify-content-center">  
        <%= submit_tag "Reserver", class: "btn btn-primary p-2" %>
      </div>
    <% end %>
  </div>
</div>
<% @bicycles.each_slice(4).with_index do |group, index| %>
  <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
    <div class="row justify-content-center">
      <% group.each_with_index do |bicycle, i| %>
        <div class="card border-warning col-md-0 col-lg-5 mx-2 p-2" id="card<%= index * 4 + i %>" itemprop="bicycle" itemscope itemtype="http://schema.org/Product">
          <%= render bicycle %>
          <div class="d-flex justify-content-between align-items-center mx-1">
            <h5 class="text-primary mb-0" style="color: #FFDE8C;" itemprop="price"><%= "#{bicycle.price_per_hour}€/1h" %></h5>
              <%= link_to "Voir le vélo", bicycle, class: "btn btn-outline-dark btn-sm ml-auto", data: { turbo: false }, aria_label: "Voir le vélo" %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

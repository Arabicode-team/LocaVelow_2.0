<div id="<%= dom_id bicycle %>">
  <p>
    <strong>Owner:</strong>
    <%= bicycle.owner_id %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= bicycle.model %>
  </p>

  <p>
    <strong>Bicycle type:</strong>
    <%= bicycle.bicycle_type %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= bicycle.size %>
  </p>

  <p>
    <strong>Condition:</strong>
    <%= bicycle.condition %>
  </p>

  <p>
    <strong>Price per hour:</strong>
    <%= bicycle.price_per_hour %>
  </p>

  <p>
    <strong>Latitude:</strong>
    <%= bicycle.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= bicycle.longitude %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= "#{bicycle.address}, #{bicycle.city}, #{bicycle.state}, #{bicycle.postal_code}, #{bicycle.country}" %>
  </p>
</div>
